# Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# LLM Provider Configuration
# =============================================================================

# OpenAI Configuration (Free tier available: $5 credit for new users)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Google Gemini Configuration (Generous free tier)
# Get your project from: https://console.cloud.google.com/
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id
GOOGLE_CLOUD_LOCATION=us-central1

# Ollama Configuration (Completely free and open-source)
# Install from: https://ollama.ai/
# Default local installation URL
OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# Dynatrace Observability Configuration
# =============================================================================

# Your Dynatrace environment URL (SaaS or Managed)
# Format: https://{your-environment-id}.live.dynatrace.com
# Or for Managed: https://{your-domain}/e/{your-environment-id}
DYNATRACE_OTLP_ENDPOINT=https://your-environment.live.dynatrace.com/api/v2/otlp
DYNATRACE_OTLP_METRICS_URL=https://your-environment.live.dynatrace.com/api/v2/otlp/v1/metrics

# Dynatrace API Token with scopes: metrics.ingest, traces.ingest, logs.ingest
# Create at: Settings > Access Tokens > Generate new token
DYNATRACE_API_TOKEN=Api-Token dt0c01.YOUR_TOKEN_HERE

# Environment label for Dynatrace
DYNATRACE_ENVIRONMENT=dev

# Enable/disable Dynatrace export (set to false to disable)
DYNATRACE_ENABLED=true

# =============================================================================
# Banking Agent Configuration
# =============================================================================

BANKING_DEFAULT_LLM=ollama
BANKING_FALLBACK_LLM=ollama
BANKING_MAX_TRANSACTION_AMOUNT=10000
BANKING_CURRENCY=USD
